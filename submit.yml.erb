<%-
  nodes = bc_num_slots.blank? ? 1 : bc_num_slots.to_i

  case custom_queue
  when "ondemand-p100"
    slurm_args = [
      "--nodes", "#{nodes}",
      "-c", "#{num_cores}",
      "--gpus-per-node", "1",
      "--partition", "ondemand-p100"
    ]
  when "classroomgpu"
    slurm_args = [
      "--nodes", "#{nodes}",
      "-c", "#{num_cores}",
      "--gpus-per-node", "1",
      "--partition", "classroomgpu"
    ]
  when "cryogars"
    slurm_args = [
      "--nodes", "#{nodes}",
      "-c", "#{num_cores}",
      "--gpus-per-node", "1",
      "--partition", "cryogars"
    ]
  else
    slurm_args = [
      "--nodes", "#{nodes}",
      "-c", "#{num_cores}",
      "--partition", "ondemand"
    ]
  end
%>
---
batch_connect:
  template: "basic"

script:
  native:
  <%- slurm_args.each do |arg| %>
    - "<%= arg %>"
  <%- end %>
    - "-J Jupyter"
