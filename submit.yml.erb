<%-
  nodes = bc_num_slots.blank? ? 1 : bc_num_slots.to_i

  slurm_args = [
    "--nodes", "#{nodes}",
    "-c", "#{num_cores}",
    "--partition", "#{custom_queue}"
  ]
  if enable_gpu == "1"
    slurm_args += ["--gpus-per-node", "1"]
  end
%>
---
batch_connect:
  template: "basic"

script:
  native:
  <%- slurm_args.each do |arg| %>
    - "<%= arg %>"
  <%- end %>
    - "-J Jupyter"
